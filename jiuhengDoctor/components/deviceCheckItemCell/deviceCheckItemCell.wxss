/* components/deviceCheckItemCell/deviceCheckItemCell.wxss */
.cell-container {
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.cell-low {
  height: 134rpx;
}

.cell-high {
  height: 160rpx;
}

.cell-content {
  height: 158rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
}


.cell-top {
  display: flex;
  width: 100%;
  height: 75rpx;
  flex-direction: row;
  align-items: center;
}

.cell-left{
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.cell-right{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.cell-note{
  margin-left: 30rpx;
  color: #333;
  font-size: 28rpx;
}

.cell-method{
  width: 113rpx;
  height: 28rpx;
  margin-left: 10rpx;
  font-size: 20rpx;
  align-items: center;
  display: flex;
  justify-content: center;
}

.cell-basi{
  color: #00a0e9;
  border: 1rpx solid #00a0e9;
}

.cell-arc{
  color: #ff7c7c;
  border: 1rpx solid #ff7c7c;
}

.cell-power{
  margin-right: 10rpx;
  color: #999;
  font-size: 22rpx;
}

.cell-power-image{
  margin-right: 30rpx;
  width: 47rpx;
  height: 24rpx;
}

.cell-line{
  position: absolute;
  left: 30rpx;
  right: 0;
  bottom: 0;
  height: 1rpx;
  background-color: #eee;
}

.check-time{
  margin-top: 0rpx;
  margin-left: 30rpx;
  font-size: 24rpx;
  color: #666;
}

.check-low-battery{
  margin-top: 10rpx;
  margin-left: 30rpx;
  color: red;
  font-size: 24rpx;
}