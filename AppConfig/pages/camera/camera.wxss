/* pages/camera/camera.wxss */
.camera-container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.camera-view{
  width: 100%;
  height: 50%;
}
.content-view{
  width: 100%;
  display: flex;
  flex-direction: row;
}
.camera-property-view{
  margin-top: 20rpx;
  width: 30%;
  display: flex;
  flex-direction: column;
  /* background-color: palegoldenrod; */
}
.devive-position-view{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.device-position-radio{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center; 
  color: black;
}
.devive-flash-view{
  margin-top: 40rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.camera-action-view{
  margin-top: 20rpx;
  width: 80%;
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
  /* justify-content: center; */
}

.main-button{
  margin-top: 40rpx;
  width: 160rpx;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  border-radius: 50%;
}
.main-photo-button{
  background-color: red;
  border: 10rpx solid #999;
  color: white;
}

.hover-photo-button{
  background-color: #cc3a32;
  border-color: #cc3a32;
  color: #a6c4d2;
}
.main-record-video{
  background-color: #cc3a32;
  border-color: #cc3a32;
  color: #a6c4d2;
}
.preview-view{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  /* background-color: hotpink; */
  white-space: nowrap;
}
.image-list{
  margin-left: 20rpx;
  margin-top: 20rpx;
  width: 200rpx;
  height: 180rpx;
  display: inline-block;
  border-radius: 4rpx;
}