/* pages/personCenter/personCenter.wxss */
#personal-container{
  height: 100%;
}
#avatar-view {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 140rpx;
  height: 140rpx;
  margin-top: 80rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  margin-top: 24rpx;
  color: #333;
  font-size: 30rpx;
}

#table-view{
  margin-top: 80rpx;
  display: flex;
  flex-direction: column;
}

.item-View{
  width: 100%;
  height: 80rpx;
  display: flex;
  background-color: #f5f5f5;
  align-items: center;
  white-space: nowrap;
}

.icon{
  width: 35rpx;
  height: 35rpx;
  margin-left: 30rpx;
}

.item-text{
  font-size: 28rpx;
  color: #333;
  margin-left: 30rpx;
}

.item-arrow{
  position: absolute;
  right: 20rpx;
  width: 20rpx;
  color: #a1a1a1;
}

.hover-item-view{
  background-color: #d9d9d9;
}

#contact{
  margin-top: 16rpx;
}