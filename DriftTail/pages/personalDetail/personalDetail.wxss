/* pages/personalDetail/personalDetail.wxss */
/*设置本页面颜色*/
page{
  background-color: #f5f5f5;
  min-height: 100%;
  display: block;
}
#personal-container{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  align-content: center;
  justify-content: center;
  text-align: center;
}

#personal-main-view{
  display: flex;
  width: 100%;
  flex-direction: column;
  align-items: center;
  align-content: center;
  justify-content: center;
  text-align: center;
  background-color: #fff;
}

#personal-number{
  margin-top: 110rpx;
  font-size: 100rpx;
  color: #ec7b6c;
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
}

#personal-title{
  margin-top: 12rpx;
  font-size: 28rpx;
  color: #999;
}

#pesonal-white{
  height: 130rpx;
  width: 100%;
  background-color: #fff;
}

#personal-detail{
  display: flex;
  flex-direction: column;
  align-items: center;
  align-content: center;
  justify-content: center;
  text-align: center;
  width: 100%;

}

#personal-name{
  margin-left: 60rpx;
  font-size: 28rpx;
  color: #666;
}

#personal-date{
  margin-left: 25rpx;
  font-size: 28rpx;
  color: #999;
}

.personal-item-cell{
  align-items: center;
  align-content: center;
  justify-content: center;
  text-align: left;
  width: 100%;
  height: 70rpx;
}

#personal-point{
  margin-left: 310rpx;
  color: #999;
  font-size: 28rpx;
}