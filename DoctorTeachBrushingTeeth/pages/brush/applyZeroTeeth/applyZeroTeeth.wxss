/* pages/brush/applyZeroTeeth/applyZeroTeeth.wxss */

page {
  height: 100%;
  width: 100%; 
}

.apply-container {
  height: 100%;
  width: 100%;
  position: relative;
  display: flex;
}

.apply-content {
  height: 100%;
  width: 100%;
  display: block;
  position: relative;
}

.apply-bg {
  position: absolute;
  height: 100%;
  width: 100%;
}

.apply-tel {
  position: absolute;
  height: 100%;
  width: 100%;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}

.bind-view {
  margin-top: 400rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.tel-view {
  width: 70%;
  height: 80rpx;
  border: 2rpx solid #00a0e9;
}

.tel-input {
  margin-left: 30rpx;
  margin-right: 30rpx;
  height: 100%;
}

.placeholder {
  color: #fff;
  font-size: 35rpx;
}

.verify-view {
  margin-top: 20rpx;
  width: 70%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.verify-input-view {
  width: 1000rpx;
  height: 80rpx;
  border: 2rpx solid #00a0e9;
}

.verify-input {
  margin-left: 30rpx;
  margin-right: 30rpx;
  height: 100%;
}

.confirm_button {
  /* opacity: 0.5; */
  text-align: center;
  display: block;
  justify-content: center;
  align-items: center;
  width: 390rpx;
  height: 90rpx;
  color: white;
  margin-top: 60rpx;
  position: relative;
}

.confirm_text {
  position: absolute;
  display: flex;
  width: 100%;
  height: 100%;
  text-align: center;
  font-size: 30rpx;
  justify-content: center;
  align-items: center;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
}

.confirm_image {
  position: absolute;
  width: 390rpx;
  height: 90rpx;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}

.cancle-button {
  width: 56rpx;
  height: 56rpx;
  z-index: 9999;
}

.get-verify-code {
  width: 100%;
  height: 100%;
  background-color: #00a0e9;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: white;
  margin-left: 10rpx;
  margin-right: 0rpx;
  border: 2rpx solid #d6d6d6;
  border-radius: 10rpx;
}

.get-verify-code-hover {
  background-color: #02557c;
  color: #a6c4d2;
}

.confirm_button-hover {
  opacity: 0.5;
  text-align: center;
  display: block;
  justify-content: center;
  align-items: center;
  width: 390rpx;
  height: 90rpx;
  color: white;
  margin-top: 60rpx;
}

.binding-getVerifyCode-view {
  color: #999;
  background-color: #f5f5f5;
}
