/* pages/brush/buyDevice/buyDevice.wxss */

page {
  width: 100%;
}

.device-container {
  width: 100%;
  height: 100%;
}

.device-content {
  width: 100%;
  height: 100%;
  display: block;
  position: relative;
}

.device-bg-image {
  margin: 0rpx;
  position: absolute;
  width: 100%;
  height: 100%;
}

.device-content-container {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}

.device-swiper {
  position: absolute;
  width: 100%;
  height: 241rpx;
  bottom: 600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.device-swiper-item{
  width: 440rpx;
  height: 241rpx;
}
.device-buy-view {
  position: absolute;
  width: 100%;
  bottom: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.device-buy-welfare {
  width: 298rpx;
  height: 58rpx;
  display: block;
  position: relative;
  align-items: center;
  justify-content: center;
}

.device-buy-youzan {
  margin-top: 40rpx;
  width: 298rpx;
  height: 58rpx;
  display: block;
  position: relative;
  align-items: center;
  justify-content: center;
}

.device-buy-image {
  width: 100%;
  height: 100%;
}

.device-buy-button {
  position: absolute;
  display: flex;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  color: white;
  font-size: 25rpx;
  justify-content: center;
  align-items: center;
}

.device-hover {
  opacity: 0.9;
}
