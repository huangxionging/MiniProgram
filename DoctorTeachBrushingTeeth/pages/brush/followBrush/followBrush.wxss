/* pages/brush/followBrush/followBrush.wxss */

page {
  background-color: #eee;
  height: 100%;
  width: 100%;
}

.follow-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.look-video {
  position: relative;
  width: 100%;
  height: 40%;
}

.cover-view {
  width: 100%;
  height: 100%;
  background-color: black;
  color: #999;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 60rpx;
  line-height: 100rpx;
}

.poster-play {
  position: absolute;
  left: 20rpx;
  bottom: 20rpx;
  width: 100rpx;
  height: 100rpx;
}

.avatar {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}

.teach-content {
  width: 100%;
}

.teach-tip {
  height: 85rpx;
  margin-left: 20rpx;
  display: flex;
  font-size: 35rpx;
  flex-direction: column;
  justify-content: center;
}

.teach-model-container {
  height: 460rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.teach-model {
  height: 460rpx;
  width: 600rpx;
}

.teach-content-bg {
  margin-top: 0rpx;
  display: block;
  height: 70%;
  position: relative;
}

.teach-bg-image {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
}

.teach-content-container {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
}

.modal-view {
  position: absolute;
  height: 100%;
  width: 100%;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}

.modal-dialog {
  position: fixed;
  display: block;
  flex-direction: column;
  /* justify-content: center; */
  align-items: center;
  height: 100%;
  width: 100%;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  overflow: hidden;
  z-index: 9999;
}


.modal-alert {
  display: block;
  margin-top: 20rpx;
  position: relative;
  align-items: center;
  /* background-color: red; */
}

.alert-bg {
  width: 120%;
  left: -10%;
  position: relative;
}

.reel {
  position: relative;
  margin-top: 94rpx;
  width: 230rpx;
  height: 56rpx;
  border-radius: 28rpx;
  background-color: #ff4445;
  color: white;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  align-self: center;
}

.cancle {
  position: relative;
  width: 60rpx;
  height: 60rpx;
  margin-top: 66rpx;
}

.modal-blur{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: black;
  opacity: 0.6;
}

.modal-content{
  position: relative;
  display: flex;
  flex-direction: column;
  left: 0rpx;
  right: 0rpx;
  bottom: 0;
  width: 100%;
  height: 100%;
  align-items: center;
}
.alert-content {
  position: absolute;
  left: 0rpx;
  right: 0rpx;
  bottom: 5%;
  width: 100%;
  height: 30%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* background-color: gold; */
}

.alert-line1 {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.line-message {
  color: #ff5051;
  font-size: 35rpx;
}

.line-tip {
  color: #98611f;
  font-size: 30rpx;
}

.alert-line2 {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.alert-line3 {
  margin-top: 30rpx;
  color: #98611f;
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  /* align-items: center; */
}
