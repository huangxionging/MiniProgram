/* pages/brush/brushIndex.wxss */

page {
  width: 100%;
  height: 100%;
}

.brush-container {
  width: 100%;
  height: 100%;
}

.brush-banner {
  width: 100%;
  height: 260rpx;
}

.brush-table-view {
  width: 100%;
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
}

.brush-cell {
  width: 100%;
}

.brush-cell-line {
  margin-top: 2rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  height: 2rpx;
  background-color: #f5f5f5;
}

.others {
  margin-top: 10rpx;
}

.zero-tip-view {
  width: 100%;
  height: 40%;
  display: flex;
  position: relative;
  align-items: center;
  justify-content: center;
}

.zero-apply-view {
  display: flex;
  width: 100%;
  height: 60%;
  flex-direction: column;
}

.confirm_button-container {
  width: 100%;
  height: 30%;
  text-align: center;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.confirm_button {
  position: relative;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 390rpx;
  height: 90rpx;
  color: white;
}

.confirm_text {
  position: absolute;
  display: flex;
  width: 100%;
  height: 100%;
  text-align: center;
  font-size: 30rpx;
  justify-content: center;
  align-items: center;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
}

.confirm_image {
  width: 390rpx;
  height: 90rpx;
}

.zero-view {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.zero-bg-image {
  width: 100%;
  height: 100%;
}

.confirm_button-hover {
  opacity: 0.5;
  position: relative;
  text-align: center;
  display: block;
  justify-content: center;
  align-items: center;
  width: 390rpx;
  height: 90rpx;
  color: white;
}

.zero-apply-image {
  width: 100%;
  height: 70%;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.zero-tip-number {
  width: 538rpx;
  height: 350rpx;
  display: block;
  position: absolute;
  justify-content: center;
  align-items: center;
}

.zero-tip-number-image {
  width: 100%;
  height: 100%;
}

.zero-number-container {
  left: 45rpx;
  right: 45rpx;
  top: 80rpx;
  bottom: 90rpx;
  position: absolute;
  /* background-color: yellow; */
  color: white;
  font-size: 60rpx;
  font: bold;
  transform: rotate(-5deg);
}

.brush-header{
  width: 100%;
  height: 260rpx;
  display: block;
  position: relative;
}

.brush-content-container{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  flex: 1;
}
.brush-user{
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  flex: 1;
}
.avatar{
  margin-left: 20rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
.user{
  margin-left: 20rpx;
  color: white;
}

.user .name{
  font-size: 35rpx;
}
.user .tip{
  font-size: 20rpx;
  margin-top: 40rpx;
}

.sign-view{
  margin-right: 0rpx;
}
.sign_image{
  width: 140rpx;
  height: 50rpx;
}
.sign-hover{
  opacity: 0.5;
}