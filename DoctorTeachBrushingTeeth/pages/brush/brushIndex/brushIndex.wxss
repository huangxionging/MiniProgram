/* pages/brush/brushIndex.wxss */

page {
  width: 100%;
  height: 100%;
  background-color: #eee;
}

.brush-container {
  width: 100%;
  height: 100%;
  display: block;
  position: relative;
}

.brush-bg {
  position: absolute;
  width: 100%;
  left: 0;
  top: 0;
  right: 0;
}


.brush-header {
  width: 100%;
  height: 252rpx;
  display: flex;
  flex-direction: row;
  position: relative;
  background-color: #20afff;
}

.header-image {
  position: absolute;
  left: 30rpx;
  top: 32rpx;
  width: 188rpx;
  height: 188rpx;
  border-radius: 50%;
}

.brush-content {
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.header-info {
  position: absolute;
  left: 272rpx;
  top: 38rpx;
  right: 34rpx;
  bottom: 40rpx;
  /* background-color: red; */
  display: flex;
  flex-direction: column;
}

.camp-title {
  position: relative;
  width: 100%;
  /* height: 76rpx; */
  font-size: 32rpx;
  color: white;
}

.camp-number {
  position: relative;
  width: 100%;
  height: 60rpx;
  font-size: 22rpx;
  color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.camp-tip {
  display: flex;
  flex-direction: row;
  height: 40rpx;
}

.camp-follow {
  width: 120rpx;
  height: 38rpx;
  border: 2rpx solid white;
  font-size: 22rpx;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 4rpx;
}

.camp-follow-hover {
  background-color: #167ab2;
  color: #eee;
}

.camp-join {
  margin-left: 36rpx;
  font-size: 20rpx;
  color: white;
  width: 200rpx;
  height: 40rpx;
  background-color: #167ab2;
  border-radius: 20rpx;
  justify-content: center;
  align-items: center;
  display: flex;
}
.banner-image {
  width: 750rpx;
  height: 480rpx;
}

.camp-view-disable{
  opacity: 0.5;
}

.banner-view{
  width: 750rpx;
  height: 480rpx;
}
.brush-table-view {
  /* position: relative; */
  width: 100%;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  background-color: white;
}

.camp-intro {
  width: 100%;
  margin-top: 30rpx;
  font-weight: bold;
  padding-left: 20rpx;
  font-size: 32rpx;
}

.brush-cell {
  width: 100%;
}

.brush-cell-line {
  margin-top: 2rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  height: 2rpx;
  background-color: #f5f5f5;
}

.others {
  margin-top: 10rpx;
}


.smart-device {
  position: absolute;
  right: 0rpx;
  bottom: 0rpx;
  width: 108rpx;
  height: 40rpx;
}

.little-girl{
  position: absolute;
  right: 2rpx;
  bottom: 40rpx;
  width: 100rpx;
  height: 94rpx;
}

.device-view{
  position: fixed;
  right: 20rpx;
  bottom: 200rpx;
  width: 108rpx;
  height: 134rpx;
  display: block;
  overflow: hidden;
}