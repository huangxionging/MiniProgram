/* pages/brush/brushIndex.wxss */

page {
  width: 100%;
  height: 100%;
  background-color: #eee;
}

.brush-container {
  width: 100%;
  height: 100%;
  display: block;
  position: relative;
}

.brush-bg {
  position: absolute;
  width: 100%;
  left: 0;
  top: 0;
  right: 0;
}

.brush-header {
  width: 100%;
  height: 252rpx;
  display: flex;
  flex-direction: row;
  position: relative;
  background-color: #20afff;
}

.header-image {
  position: absolute;
  left: 30rpx;
  top: 32rpx;
  width: 188rpx;
  height: 188rpx;
  border-radius: 50%;
  background-color: red;
}

.brush-content {
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.header-info {
  position: absolute;
  left: 272rpx;
  top: 38rpx;
  right: 34rpx;
  bottom: 40rpx;
  /* background-color: red; */
  display: flex;
  flex-direction: column;
}

.camp-title {
  position: relative;
  width: 100%;
  height: 76rpx;
  font-size: 32rpx;
  color: white;
}

.camp-number {
  position: relative;
  width: 100%;
  height: 60rpx;
  font-size: 22rpx;
  color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.camp-tip {
  display: flex;
  flex-direction: row;
}

.camp-follow {
  width: 120rpx;
  height: 38rpx;
  border: 2rpx solid white;
  font-size: 22rpx;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 4rpx;
}

.camp-join {
  margin-left: 36rpx;
  font-size: 20rpx;
  color: white;
  width: 200rpx;
  height: 40rpx;
  background-color: #167ab2;
  border-radius: 20rpx;
  justify-content: center;
  align-items: center;
  display: flex;
}

.camp-collapse {
  width: 100%;
  height: 270rpx;
  background-color: white;
}

.camp-show {
  width: 100%;
  background-color: white;
}

.brush-table-view {
  /* position: relative; */
  width: 100%;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  background-color: white;
}

.camp-intro {
  width: 100%;
  margin-top: 30rpx;
  font-weight: bold;
  padding-left: 20rpx;
  font-size: 32rpx;
}

.camp-content-collapse {
  margin-top: 30rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  height: 136rpx;
  display: block;
  position: relative;
  font-size: 26rpx;
}


.camp-collapse-view{
  width: 100%;
  height: 140rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.camp-collapse-text{
  width: 100%;
  height: 100%;
}

.camp-content-show {
  margin-top: 30rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 30rpx;
  display: block;
  position: relative;
  font-size: 26rpx;
}

.arrow-view {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 40rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
}

.arrow {
  width: 20rpx;
  height: 30rpx;
  margin-top: 32rpx;
  background-color: white;
}

.brush-cell {
  width: 100%;
}

.brush-cell-line {
  margin-top: 2rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  height: 2rpx;
  background-color: #f5f5f5;
}

.others {
  margin-top: 10rpx;
}
