<!--pages/brush/brushIndex.wxml-->
<view class='navigation-bar-line' />
<view class='brush-container' wx:if='{{loadDone}}'>
  <view wx:if='{{isTel}}'>
    <image src='/resource/banner.png' class='brush-banner'></image>
    <view class='brush-table-view'>
      <block wx:for='{{brushDataList}}' wx:key='id' wx:item='item'>
        <view class="brush-cell {{index==0?'':'others'}}">
          <userBrushItem data='{{item}}' bind:reportTap='reportTapClick' />
          <view class='brush-cell-line' />
        </view>
      </block>
    </view>
  </view>
  <view wx:else class='zero-view'>
    <view class='zero-tip-view'>
      <image class='zero-bg-image' src='/resource/zero_tip_bg.png' />
      <view class='zero-tip-number'>
        <image class='zero-tip-number-image' src='/resource/zero_tip.png'/>
        <view class='zero-number-container'>
          {{doctors}}位医生带领{{users}}人正在参加
        </view>
      </view>
    </view>
    <view class='zero-apply-view'>
      <view class='confirm_button-container'>
        <view class='confirm_button' bindtap='confirmClick' hover-class='confirm_button-hover'>
          <image class='confirm_image' src='/resource/confirm_button.png'></image>
          <view class='confirm_text'>我要报名</view>
        </view>
      </view>
      <image class='zero-apply-image' src='/resource/zero_apply_bg.png' />
    </view>
  </view>
</view>