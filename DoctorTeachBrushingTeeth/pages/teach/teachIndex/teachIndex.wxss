page {
  /* width: 100%;
  height: 100%; */
  background-color: #f5f5f5;
}

.teach-container {
  position: relative;
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
}

.segment {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
}

.segment-item {
  position: relative;
  width: 50%;
  height: 100%;
  text-align: center;
  font-size: 35rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.segment-item-line {
  position: absolute;
  width: 100%;
  height: 4rpx;
  bottom: 0rpx;
  background-color: #00a0e9;
}

.segment-color {
  color: #00a0e9;
}

.segment-line {
  width: 2rpx;
  height: 100%;
  background-color: #f5f5f5;
}

.look-video-view {
  position: relative;
  width: 100%;
  margin-top: 0rpx;
  background-color: white;
}

.look-video {
  position: relative;
  width: 100%;
  height: 430rpx;
}

.text-tip {
  height: 80rpx;
  font-size: 35rpx;
  margin-left: 20rpx;
  align-items: center;
  display: flex;
}

.text-line {
  height: 2rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 0rpx;
  background-color: #f5f5f5;
}

.text-info {
  font-size: 35rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}


.modal-dialog {
  width: 80%;
  position: fixed;
  z-index: 9999;
  display: flex;
  top: 15%;
  left: 10%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.modal-content {
  width: 100%;
  position: relative;
  margin-top: 100rpx;
  background-color: white;
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.modal-title {
  width: 100%;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.modal-title-image {
  width: 430rpx;
  height: 63rpx;
}

.tel-input {
  margin-left: 30rpx;
  margin-right: 30rpx;
  height: 100%;
}

.placeholder {
  color: #999;
  font-size: 35rpx;
}

.verify-view {
  margin-top: 20rpx;
  width: 90%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.verify-input-view {
  width: 1000rpx;
  height: 80rpx;
  /* border: 2rpx solid #d6d6d6; */
  background-color: white;
}

.verify-input {
  margin-left: 30rpx;
  margin-right: 30rpx;
  height: 100%;
}

.confirm_button {
  /* opacity: 0.5; */
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 390rpx;
  height: 90rpx;
  color: white;
  margin-top: 60rpx;
}

.confirm_text {
  position: fixed;
