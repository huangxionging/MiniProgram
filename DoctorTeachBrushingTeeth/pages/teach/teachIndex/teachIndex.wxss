/* pages/teach/teachIndex.wxss */

page {
  width: 100%;
  height: 100%;
}

.teach-container {
  position: relative;
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
}

.doctor-header {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}

.segment-container {
  width: 100%;
  height: 140rpx;
  display: flex;
  flex-direction: row;
}

.avatar {
  position: absolute;
  left: 10rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.doctor-content {
  position: absolute;
  left: 100rpx;
  right: 10rpx;
  height: 100%;
  overflow: hidden;
  white-space: nowrap;
}

.doctor-animation{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* align-items: center; */
}

.segment {
  white-space: nowrap;
}

.segment-item {
  position: relative;
  width: 20%;
  height: 100%;
  display: inline-block;
}

.segment-item-content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 25rpx;
}

.segment-icon {
  width: 90rpx;
  height: 90rpx;
}

.segment-color {
  color: #00a0e9;
}

.segment-line {
  width: 2rpx;
  height: 100%;
  background-color: #f5f5f5;
}

.look-video-view {
  position: relative;
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-top: 0rpx;
  background-color: white;
}

.look-video {
  position: relative;
  width: 100%;
  height: 430rpx;
}

.poster {
  width: 100%;
  height: 100%;
}

.poster-image {
  width: 100%;
  height: 100%;
}

.poster-play {
  position: absolute;
  left: 20rpx;
  bottom: 20rpx;
  width: 100rpx;
  height: 100rpx;
}

.tip-line {
  margin-top: 2rpx;
  height: 2rpx;
  width: 100%;
  background-color: #f5f5f5;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.video-item-table {
  margin-top: 0rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.modal-cover-container {
  width: 100%;
  position: fixed;
  z-index: 9999;
  display: flex;
  top: 100rpx;
  bottom: 0;
  flex-direction: column;
  /* justify-content: center; */
  /* align-items: center; */
  overflow: hidden;
  background-color: black;
  opacity: 0.8;
}

.cover-arrow{
  position: relative;
  margin-left: 40rpx;
  width: 210rpx;
  height: 282rpx;
}

.cover-button-container{
  display: flex;
  flex-direction: column;
  width: 100%;
  align-items: center;
  margin-top: -40rpx;
}

.cover-button{
  width: 382rpx;
  height: 554rpx;
}