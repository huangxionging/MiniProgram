/* pages/teach/teachIndex.wxss */

.teach-container {
  display: flex;
  flex-direction: column;
}

.segment {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
}

.segment-item {
  position: relative;
  width: 50%;
  height: 100%;
  text-align: center;
  font-size: 35rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.segment-item-line {
  position: absolute;
  width: 100%;
  height: 4rpx;
  bottom: 0rpx;
  background-color: #00a0e9;
}

.segment-color {
  color: #00a0e9;
}

.segment-line {
  width: 2rpx;
  height: 100%;
  background-color: #f5f5f5;
}

.look-video-view {
  width: 100%;
}

.look-video {
  width: 100%;
  height: 430rpx;
}

.text-tip {
  height: 80rpx;
  font-size: 35rpx;
  margin-left: 20rpx;
  align-items: center;
  display: flex;
}

.text-line {
  height: 2rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 0rpx;
  background-color: #f5f5f5;
}

.text-info {
  font-size: 35rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
