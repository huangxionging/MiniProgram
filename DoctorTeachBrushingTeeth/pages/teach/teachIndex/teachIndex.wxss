/* pages/teach/teachIndex.wxss */
page{
  width: 100%;
  height: 100%;
}
.teach-container {
  position: relative;
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
}

.segment-container {
  margin-top: 20rpx;
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
}

.segment{
  white-space: nowrap;
}
.segment-item {
  position: relative;
  width: 250rpx;
  height: 100%;
  text-align: center;
  display:inline-flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  /* background-color: red; */
  /* margin-left: 10rpx; */
}

.segment-item-line {
  position: absolute;
  width: 25%;
  height: 4rpx;
  bottom: 0rpx;
  background-color: #00a0e9;
}

.segment-color {
  color: #00a0e9;
}

.segment-line {
  width: 2rpx;
  height: 100%;
  background-color: #f5f5f5;
}

.look-video-view {
  position: relative;
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-top: 0rpx;
  background-color: white;
}

.look-video {
  position: relative;
  width: 100%;
  height: 430rpx;
}

.poster {
  width: 100%;
  height: 100%;
}

.poster-image {
  width: 100%;
  height: 100%;
}

.poster-play {
  position: absolute;
  left: 20rpx;
  bottom: 20rpx;
  width: 100rpx;
  height: 100rpx;
}

.tip-line {
  margin-top: 2rpx;
  height: 2rpx;
  width: 100%;
  background-color: #f5f5f5;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

