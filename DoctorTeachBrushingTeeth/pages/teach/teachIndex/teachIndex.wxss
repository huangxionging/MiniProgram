/* pages/teach/teachIndex.wxss */

page {
  width: 100%;
  height: 100%;
}

.teach-container {
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
  background-color: white;
}

.segment {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
}

.segment-item {
  position: relative;
  width: 50%;
  height: 100%;
  text-align: center;
  font-size: 35rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.segment-item-line {
  position: absolute;
  width: 100%;
  height: 4rpx;
  bottom: 0rpx;
  background-color: #00a0e9;
}

.segment-color {
  color: #00a0e9;
}

.segment-line {
  width: 2rpx;
  height: 100%;
  background-color: #f5f5f5;
}

.look-video-view {
  width: 100%;
}

.look-video {
  width: 100%;
  height: 430rpx;
}

.text-tip {
  height: 80rpx;
  font-size: 35rpx;
  margin-left: 20rpx;
  align-items: center;
  display: flex;
}

.text-line {
  height: 2rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 0rpx;
  background-color: #f5f5f5;
}

.text-info {
  font-size: 35rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.modal-dialog {
  width: 80%;
  position: fixed;
  z-index: 9999;
  display: flex;
  top: 20%;
  left: 10%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.modal-content {
  width: 100%;
  position: relative;
  background-color: white;
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.modal-title {
  width: 100%;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.tel-view {
  width: 90%;
  height: 80rpx;
  border: 2rpx solid #d6d6d6;
}

.tel-input {
  margin-left: 30rpx;
  margin-right: 30rpx;
  height: 100%;
}

.placeholder {
  color: #3c3c3c;
  font-size: 35rpx;
}

.verify-view {
  margin-top: 20rpx;
  width: 90%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.verify-input-view {
  width: 1000rpx;
  height: 80rpx;
  border: 2rpx solid #d6d6d6;
}

.verify-input {
  margin-left: 30rpx;
  margin-right: 30rpx;
  height: 100%;
}

.confirm_button {
  position: relative;
  text-align: center;
  display: flex;
  overflow: hidden;
  justify-content: center;
  align-items: center;
  width: 390rpx;
  height: 90rpx;
  color: white;
}

.confirm_text {
  position: fixed;
  text-align: center;
  font-size: 30rpx;
}

.confirm_image {
  width: 390rpx;
  height: 90rpx;
}

.cancle-button {
  width: 56rpx;
  height: 56rpx;
  z-index: 9999;
}

.teach-video-view {
  height: 100%;
  /* margin-bottom: 0rpx; */
  margin-top: 0rpx;
  background-color: #f5f5f5;
}

.teach-content {
  width: 100%;
}

.teach-model-container {
  height: 460rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.modal-tip {
  width: 100%;
  height: 122rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 25rpx;
  color: #3c3c3c;
}

.teach-model {
  height: 460rpx;
  width: 600rpx;
}

.teach-tip {
  height: 85rpx;
  margin-left: 20rpx;
  display: flex;
  font-size: 35rpx;
  flex-direction: column;
  justify-content: center;
}

.get-verify-code {
  width: 100%;
  height: 100%;
  background-color: #00a0e9;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: white;
  margin-left: 10rpx;
  margin-right: 0rpx;
  border: 2rpx solid #d6d6d6;
  border-radius: 10rpx;
}

.get-verify-code-hover {
  background-color: #02557c;
  color: #a6c4d2;
}

.confirm_button-hover {
  opacity: 0.5;
}

.binding-getVerifyCode-view {
  color: #999;
  background-color: #f5f5f5;
}

.cancle-button-view {
  width: 100rpx;
  height: 100rpx;
  margin-top: 50rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
