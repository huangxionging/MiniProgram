<!--pages/teach/teachIndex.wxml-->
<view class='navigation-bar-line' />
<view class='teach-container' wx:if='{{loadDone}}'>
  <view class='segment'>
    <view class='segment-item' bindtap='segmentClick' data-index='1'>
      <text class="{{isSelect?'segment-color':''}}">看视频</text>
      <view wx:if='{{isSelect}}' class='segment-item-line' />
    </view>
    <view class='segment-line' />
    <view class='segment-item' bindtap='segmentClick' data-index='2'>
      <text class="{{!isSelect?'segment-color':''}}">学刷牙</text>
      <view wx:if='{{!isSelect}}' class='segment-item-line' />
    </view>
  </view>
  <view wx:if='{{isSelect}}' class='look-video-view'>
    <video src='{{videoUrl}}' class='look-video' autoplay='true'>
      <!-- <cover-image src='{{avatar}}' class='avatar'></cover-image> -->
    </video>
    <view class='news-table-view'>
      <block wx:for='{{newsList}}' wx:key='id' wx:item='item'>
        <newsComponent data='{{item}}' class='news-item'/>
      </block>
    </view>
  </view>
  <view wx:if='{{!isSelect && isTel}}' class='teach-video-view'>
    <video src='{{teachVideoUrl}}' class='look-video' binderror='binderror' autoplay='true' bindended='videoPlayEnd'>
      <cover-image src='{{avatar}}' class='avatar'></cover-image>
    </video>
    <view class='teach-content'>
      <view class='teach-tip'>一起来找牙面</view>
      <swiper class='teach-model-container' current='{{currentIndex}}' bindchange='scrollChange' previous-margin='80rpx' next-margin='30rpx'>
        <block wx:for='{{brushModels}}' wx:key='id' wx:item='item'>
          <swiper-item item-id='{{index}}'>
            <view class='teach-model'>
              <teachBrushModel data='{{item}}' />
            </view>
          </swiper-item>
        </block>
      </swiper>
    </view>
  </view>
</view>
<modalDialog wx:if='{{showModal}}' data='{{modalDialog}}' bind:hideModal='hideModal' catchtouchmove='preventTouch'>
  <view class='modal-dialog'>
    <view class='modal-content'  catchtouchmove='preventTouch'>
      <view class='modal-title'>
        <image class='modal-title-image' src='../../../resource/bind_tel_tip.png'></image>
      </view>
      
      
      <view class='tel-view' catchtouchmove='preventTouch'>
        <input type='number' class='tel-input' placeholder='请输入手机号' maxlength='11' bindinput='getInputContent' placeholder-class='placeholder' catchtouchmove='preventTouch'></input>
      </view>
      <view class='verify-view' catchtouchmove='preventTouch'>
        <view class='verify-input-view' catchtouchmove='preventTouch'>
          <input type='number' class='verify-input' placeholder='验证码' bindinput='getInputVerifyCode' placeholder-class='placeholder' catchtouchmove='preventTouch'></input>
        </view>
        <view wx:if='{{verifyCodeDisabled}}' class='get-verify-code' style='background-color:#f5f5f5;color:#999'>
        {{verifyTitle}}
      </view>
      <view wx:else class='get-verify-code' hover-class='get-verify-code-hover' bindtap='getVerifyCodeClick' catchtouchmove='preventTouch'>
        {{verifyTitle}} 
      </view>
      </view>
      <view class='modal-tip'>输入手机号参与体验实时跟刷哦~</view>
      <view class='confirm_button' bindtap='confirmClick' hover-class='confirm_button-hover'>
        <image class='confirm_image' src='../../../resource/confirm_button.png'></image>
        <text class='confirm_text'>立即参与</text>
      </view>
      <view style='width:100%;height:35rpx;'/>
    </view>
    <view class='cancle-button-view' bindtap='cancleClick'>
      <image class='cancle-button' src='../../../resource/cancle_button.png'></image>
    </view>
    
  </view>
</modalDialog>