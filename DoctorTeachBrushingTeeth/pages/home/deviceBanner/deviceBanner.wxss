/* pages/home/deviceBanner/deviceBanner.wxss */

.device-container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.video-container {
  width: 100%;
  height: 430rpx;
}
.video {
  width: 100%;
  height: 100%;
}
.content-container {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.device-buy-container{
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  display: flex;
  flex-direction: column;
}
.device-line {
  height: 2rpx;
  width: 100%;
  background-color: #f5f5f5;
}
.device-buy-button{
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  flex: 1;
}
.device-button {
  background-color: #00a0e9;
  color: #fff;
  width: 49%;
  height: 70rpx;
  font-size: 30rpx;
  align-items: center;
  display: flex;
  justify-content: center;
  text-align: center;
  border-radius: 10rpx;
}
.right{
  margin-left: 2%;
}

.hover-button {
  background-color: #02557c;
  color: #a6c4d2;
}