<!--pages/home/homeIndex.wxml-->
<view class='navigation-bar-line'/>
<view class='doctor-container' wx:if='{{loadDone}}'>
  <doctorInfo class='doctorInfo' binddoctorInfoClick='onDoctorInfoClick' avatar='{{avatar}}'
  name='{{doctorName}}' department='{{department}}' jobTitle='{{jobTitle}}' hospital='{{hospital}}'/>
  <text class='text-tip'>{{doctorName}}医生最近的刷牙报告</text>
  <view class='text-line'/>
  <view class='report-view'>
    <block wx:for='{{reportDataList}}' wx:key='id' wx:item='item'>
      <brushReport 
        id='{{index}}'
        data='{{item}}'
        bind:reportTap='reportTapClick'
      />
    </block>
  </view>
  
</view>
