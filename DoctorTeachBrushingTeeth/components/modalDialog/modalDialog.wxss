.modal-mask {
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
  background: black;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  background: rgba(0, 0, 0, 0.5); /*蒙层的透明度可以自定义*/
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

