/* components/modalDialog/modalDialog.wxss */

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
  background: black;
  overflow: hidden;
  z-index: 9000;
  opacity: 0.5;
  /* background: rgba(0, 0, 0, 0.3); 蒙层的透明度可以自定义 */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.modal-content{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
  overflow: hidden;
  z-index: 9000;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
