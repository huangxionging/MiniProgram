/* components/videoItem/videoItem.wxss */

.video-container {
  padding: 20rpx;
  display: flex;
  flex-direction: row;
}


.video-view {
  display: flex;
  width: 100%;
  height: 200rpx;
  align-items: center;

}

.video-content {
  display: block;
  position: relative;

  width: 346rpx;
  height: 200rpx;

}

.video-poster{
  width: 346rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.video-time {
  position: absolute;
  right: 5rpx;
  bottom: 5rpx;
  font-size: 20rpx;
  color: white;
}

.video-info {

  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.video-title {
  font-size: 30rpx;
}

.video-intro {
  width: 100%;
  color: #999;
  font-size: 25rpx;
}
