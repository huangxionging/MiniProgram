/* components/videoItem/videoItem.wxss */

.video-container {
  padding: 20rpx;
  display: flex;
  flex-direction: row;
}

.video-left {
  display: flex;
  flex-direction: column;
  width: 350rpx;
  flex: 1;
}

.video-right {
  display: flex;
  flex-direction: column;
  width: 350rpx;
}

.video-view {
  display: flex;
  width: 100%;
  height: 200rpx;
}

.video-content {
  display: block;
  position: relative;
  width: 350rpx;
  height: 200rpx;

}

.video-poster {
  position: absolute;
  width: 350rpx;
  height: 100%;
  border-radius: 10rpx;
}

.video-time {
  position: absolute;
  right: 5rpx;
  bottom: 5rpx;
  font-size: 20rpx;
  color: white;
}

.video-info {
  margin-top: 10rpx;
  width: 350rpx;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
}

.video-title {
  font-size: 30rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.video-intro {
  width: 100%;
  color: #999;
  font-size: 25rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
