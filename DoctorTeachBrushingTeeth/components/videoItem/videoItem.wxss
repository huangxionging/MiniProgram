/* components/videoItem/videoItem.wxss */
.video-container{
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.video-content{
  display: block;
  position: relative;
  width: 300rpx;
  height: 180rpx;
  
}

.video-poster{
  width: 300rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.video-time{
  position: absolute;
  right: 5rpx;
  bottom: 5rpx;
  font-size: 20rpx;
  color: white;
}

.video-info {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  /* background-color: red; */
}

.video-title{
  font-size: 30rpx;
}
.video-intro{
  color: #999;
  font-size: 25rpx;
}