<!--components/videoItem/videoItem.wxml-->
<view class='video-container'>
  <view class='video-view'>
    <view class='video-content' bindtap='videoClick'>
      <image class='video-poster' src='{{data.videoPicUrl}}' />
      <view class='video-time'>{{data.duration}}</view>
    </view>
  </view>
  <view class='video-info'>
    <text class='video-title'>{{data.name}}</text>
    <text class='video-intro'>{{data.videoIntro}}</text>
  </view>
</view>