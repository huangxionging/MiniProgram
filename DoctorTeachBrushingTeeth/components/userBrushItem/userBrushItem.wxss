/* components/userBrushItem/userBrushItem.wxss */
.user-brush-container{
  width: 100%;
  height: 100%;

}

.brush-content{
  position: relative;
  margin-left: 20rpx;
  height: 100%;
  display: flex;
  flex-direction: row;
}
.avatar-view{
  height: 100%;
  display: flex;
  align-items:flex-end;
}
.avatar{
  margin-top: 20rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.brush-info{
  display: flex;
  height: 100%;
  width: 100%;
  flex-direction: column;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.user-name{
  font-size: 30rpx;
}
.user-brush-text{
  font-size: 25rpx;
  color: #7a7a7a;
}
.brush-report{
  width: 100%;
}
.bursh-time-container{
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  font-size: 25rpx;
}
.bursh-device{
  margin-left: 20rpx;
  color: #00a0e9;
}
.bursh-time{
  height: 100%;
  color: #c1c1c1;
}