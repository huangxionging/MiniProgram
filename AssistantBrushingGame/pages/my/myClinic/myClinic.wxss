/* pages/my/myClinic/myClinic.wxss */
page{
  width: 100%;
  height: 100%;
}
.clinic-container{
  width: 100%;
  height: 100%;
}

#clinic-name{
  margin-top: 10rpx;
  width: 100%;
  height: 100rpx; 
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 26rpx;
}

#clinic-name-title{
  margin-left: 20rpx;
}

#clinic-intro{
  margin-top: 10rpx;
  width: 100%;
  height: 248rpx; 
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 26rpx;
}

#clinic-intro-title{
  margin-left: 20rpx;
}

#clinic-intro-area {
  margin-left: 20rpx;
  margin-right: 0rpx;
  height: 248rpx;
  flex: 1
}



#clinic-image{
  margin-top: 10rpx;
  width: 100%;
  height: 248rpx; 
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 26rpx;
}
#clinic-input{
  margin-left: 20rpx;
  margin-right: 0rpx;
  height: 100rpx;
  flex: 1;
  border-color: #00a0e9;
  border-width: 50rpx;
}

#clinic-pic-titile{
  margin-left: 20rpx;
}

.clinic-pic{
  margin-left: 20rpx;
  width: 258rpx;
  height: 228rpx;
  border-radius: 10rpx;
}
.clinic-save-button{
  position: fixed;
  width: 100%;
  height: 98rpx; 
  bottom: 0;
  font-size: 30rpx;
  background-color: #00a0e9;
  color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-weight: normal;
}