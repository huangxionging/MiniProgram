/* pages/contest/contestUser/contestUser.wxss */
@import '../../../template/contestTemplate.wxss';

.contest-user-container{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  font-weight: normal; 
}
.contest-content-view{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  flex: 1;
}

#contest-user {
  position: absolute;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  right: 30rpx;
  top: 60rpx;
}

#contest-no-user-view {
  margin-top: 238rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

#contest-no-contest-image {
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
}

#contest-no-contest-text{
  margin-top: 50rpx;
  font-size: 26rpx;
  color: #9c9da3;
}

#contest-create-contest-button{
  margin-top: 280rpx;
}

.contest-table-view{
  width: 100%;
  margin-top: 2rpx;
  margin-bottom: 98rpx;
  /* flex: 1; */
}

.add-contest-user{
  position: fixed;
  width: 100%;
  height: 98rpx; 
  bottom: 0;
  font-size: 30rpx;
  background-color: #00a0e9;
  color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-weight: normal;
}
.hover-main-button{
  background-color: #02557c;
  color: #a6c4d2;
}