.select-user-container{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
  justify-content: center;
  font-weight: lighter; 
}
.select-content-view{
  height: 100%;
  width: 100%;
  align-content: center;
  align-items: center;
  display: flex;
  flex-direction: column;
}

#select-user {
  position: absolute;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  right: 30rpx;
  top: 60rpx;
}

#select-no-user-view {
  margin-top: 238rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

#select-no-select-image {
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
}

#select-no-select-text{
  margin-top: 50rpx;
  font-size: 26rpx;
  color: #9c9da3;
}

#select-create-select-button{
  position: absolute;
  bottom: 270rpx;
}



#select-table-view{
  width: 100%;
  margin-top: 2rpx;
  margin-bottom: 98rpx;
}

#add-select-user{
  width: 100%;
  height: 98rpx; 
  position: fixed;
  bottom: 0;
  font-size: 30rpx;
  background-color: #00a0e9;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
  justify-content: center;
  font-weight: normal;
}