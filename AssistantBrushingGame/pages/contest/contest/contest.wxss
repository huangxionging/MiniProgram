/* pages/contest/contest.wxss */
/* 引入模板*/
@import '../../../template/contestTemplate.wxss';

.contest-container {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-weight: lighter; 
}

#contest-user {
  position: absolute;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  right: 30rpx;
  top: 60rpx;
}

#contest-no-contest-view {
  margin-top: 238rpx;
  display: -webkit-flex;
  flex-direction: column;
  align-items: center;
}

#contest-no-contest-image {
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
}

#contest-no-contest-text{
  margin-top: 50rpx;
  font-size: 26rpx;
  color: #9c9da3;
}

#contest-create-contest-button{
  position: absolute;
  bottom: 100rpx;
}



#contest-main-view{
  width: 100%;
  height: 400rpx;
  display: flex;  
  flex-direction: column; 
  align-items: center;
  font-weight: normal;  
  background-color: #f5f5f5;
  position: relative
}

 #contest-background{
  margin-top: 0;
  width: 100%;
  height: 100%;
} 

#contest-create-image{
  position: absolute; 
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  right: 30rpx;
  top: 60rpx;
}

#contest-synchronize-image{
  position: absolute;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  right: 30rpx;
  top: 160rpx;
}
#contest-info-view{
  position: absolute;
  width: 100%;
  top: 90rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-weight: normal; 
  color: white;
}
#contest-title{
  position: relative;
  font-size: 40rpx;
  font-weight: bold;
}

#contest-date{
  position: relative;
  font-size: 26rpx;
  font-weight: lighter;
}

#contest-syn-button{
  position: relative;
  margin-top: 70rpx; 
}

#contest-synchronization{
  margin-top: 70rpx; 
  background-color: #68b9de;
}

#contest-table-view{
  width: 100%;
}