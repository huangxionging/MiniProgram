.detail-container{
  width: 100%;
  height: 100%;
  position: relative;
}
.item-view{
  margin-top: 2rpx;
  width: 100%;
  background-color: white;
  height: 90rpx;
  display: flex;
  flex-direction: row;
}
.group-header-view{
  position: relative;
  width: 100%;
  height: 300rpx;
}

.group-header-bg{
  width: 100%;
  height: 100%;
}
.scoreList{
   margin-top: 13rpx 
}
.team-blue{
  position: absolute;
  left: 30rpx;
  bottom: 20rpx;
  color: #00a0e9;
}
.blue-like-view{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.blue-like{
  width: 38rpx;
  height: 38rpx;
}
.blue-avg-score{
  margin-left: 10rpx;
  font-size: 50rpx;
  font-weight: bold; 
  color: white;
}
.blue-like-number{
  margin-left: 10rpx;
  color: #00d0ab;
}
.table-view{
  position: relative;
  width: 100%;
}
.group-content-view{
  margin-top: 0;
  width: 100%;
}
.team-red{
  position: absolute;
  right: 30rpx;
  bottom: 20rpx;
  color: #fe6d6d;
}
.red-like-view{
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
}
.red-like{
  width: 38rpx;
  height: 38rpx;
}
.red-like-number{
  margin-right: 10rpx;
  color: #00d0ab;
}
.red-avg-score{
  margin-right: 10rpx;
  font-size: 50rpx;
  font-weight: bold; 
  color: white;
}
.personal-header{
  position: relative;
  width: 100%;
  height: 120rpx;
  background-color: white;
  color: black;
  display: flex;
  flex-direction: row;
  /* justify-content: center; */
  align-items: center;
}
.personal-modify{
  margin-left: 10rpx;
  width: 30rpx;
  height: 30rpx;
}
.personal-share-button{
  position: absolute;
  right: 30rpx;
  width: 120rpx;
  border-width: 2rpx;
  border-style: solid;
  border-color: #00a0e9;
  border-radius: 20rpx;
  text-align: center;
  color: #00a0e9;

}
.personal-header-text{
  margin-left: 30rpx;
}