.item{
  width: 100%;
  height: 120rpx;
  background-color: #fff;
  align-content: center;
  align-items: center;
  justify-content: center;
  display: flex;
  flex-direction: line;
  font-weight: normal;
}

.item-orthers{
  margin-top: 8rpx;
}

#item-rank{
  position: absolute;
  left: 30rpx;
  font-size: 40rpx;
  color: #9c9da3;
  font-weight: lighter;
}

#item-name-tail{
  position: absolute;
  left: 80rpx;
  align-content: center;
  align-items: center;
  justify-content: center;
  display: flex;
}
#item-name{
  margin-left: 0;
  font-size: 28rpx;
  color: #333;
}

#item-tail{
  margin-left: 16rpx;
  font-size: 26rpx;
  color: #999;
}

#item-score{
  position: absolute;
  right: 30rpx;
  font-size: 26rpx;
  color: #999;
}