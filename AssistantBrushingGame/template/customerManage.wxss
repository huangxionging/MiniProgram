.triangle{
  position: absolute;
  top: 0rpx;
  width: 130rpx;
  height: 80rpx;
  left: 50%;
  margin-left: -65rpx;
  text-align: center;
}
.triangle-image{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}
.triangle-text{
  position: relative;
  font-size: 40rpx;
}
