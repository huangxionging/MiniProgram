/* pages/patientManage/patientDetail/patientDetail.wxss */
page{
  background-color: #eee;
}

.detail-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.patient-info-container{
  margin-top: 20rpx;
  height: 253rpx;
  width: 690rpx;
  background-color: white;
  border-radius: 16rpx;
}

.patient-container{
  position: relative;
  display: flex;
  flex-direction: row;
}

.name-tip{
  margin-left: 30rpx;
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #666;
}

.name-input{
  margin-top: 25rpx;
  margin-left: 30rpx;
  border-bottom: 2rpx solid #eee;
  font-size: 28rpx;
  width: 300rpx;
}

.end-edit{
  position: absolute;
  right: 30rpx;
  top: 25rpx;
  font-size: 28rpx;
  color: #00a0e9;
}

.patient-name{
  margin-left: 30rpx;
  margin-top: 25rpx;
  font-size: 30rpx;
  color: #333;
}
.patient-line{
  margin-top: 26rpx;
  height: 2rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  background-color: #eee;
}