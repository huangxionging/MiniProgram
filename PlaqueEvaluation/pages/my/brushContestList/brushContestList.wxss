/* pages/my/brushContestList/brushContestList.wxss */

page {
  background-color: #eee;
  height: 100%;
}

.list-container {
  width: 100%;
  height: 100%;
}

.list-table-view {
  margin-bottom: 100rpx;
}

.section-view {
  display: flex;
  flex-direction: column;
  background-color: white;
}

.section-header {
  display: flex;
  flex-direction: row;
  height: 100rpx;
  align-items: center;
}

.select-component-image {
  margin-left: 30rpx;
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
}

.section-date {
  margin-left: 20rpx;
  color: #333;
  font-size: 28rpx;
}

.merge-view {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  align-items: center;
  display: flex;
  flex-direction: row;
  border-top: 2rpx solid #eee;
  background-color: white;
}

.action-view {
  width: 200rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: white;
}

.action-bg1 {
  background-color: #71d3ff;
}

.action-bg2 {
  background-color: #00a0e9;
}

.hover-action-view {
  background-color: #02557c;
  color: #a6c4d2;
}
