/* components/brushContestDetaiCell/brushContestDetaiCell.wxss */

.cell-container {
  position: relative;
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  background-color: white;
}

.cell-content {
  display: flex;
  position: relative;
  height: 118rpx;
  flex-direction: row;
  align-items: center;
}

.cell-line {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 1rpx;
  background-color: #eee;
}

.cell-title {
  margin-left: 35rpx;
  color: #333;
  font-size: 40rpx;
}

.cell-medal {
  width: 40rpx;
  height: 54rpx;
  margin-left: 30rpx;
}

.cell-name-view {
  position: relative;
  left: 20rpx;
  height: 100%;
  color: #333;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* flex: 1; */
}

.plaque-level{
  font-size: 22rpx;
  color: #999;
}

.cell-score {
  position: absolute;
  left: 420rpx;
  display: flex;
  height: 100%;
  flex-direction: column;
  justify-content: center;
}

.cell-total {
  position: relative;
  font-weight: bold;
  font-size: 28rpx;
  color: #333;
}

.cell-detail {
  font-size: 24rpx;
  color: #333;
}

.cell-color1{
  color: #ffb93c;
}
.cell-color2{
  color: #bcbcbc;
}
.cell-color3{
  color: #d6984f;
}

