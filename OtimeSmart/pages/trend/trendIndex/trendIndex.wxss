.trend-container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-container{
  margin-top: 30rpx;
  width: 520rpx;
  height: 60rpx;
  border-radius: 30rpx;
  border: 2rpx solid #999;
  display: flex;
  flex-direction: row;
  color: white;
  font-size: 30rpx;
  overflow: hidden;
}

.action-item{
  width: 131rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.action-select{
  background-color: #08A5F6;
  border-radius: 30rpx;
}