/* pages/my/familyCircleManage/familyCircleManage.wxss */
@import "../../../template/cell.wxss";

page {
  background-color: #eee;
}

.family-container {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.family-table-view {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  margin-bottom: 270rpx;
  overflow: hidden;
}

.section-view {
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  overflow: hidden;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  background-color: white;
}

.section-header {
  margin-top: 0rpx;
  width: 100%;
  height: 272rpx;
  display: flex;
  flex-direction: column;
}

.family-info{
  position: relative;
  width: 100%;
  height: 92rpx;
  display: flex;
  flex-direction: row;
}

.family-content {
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.cell-img{
  margin-left: 26rpx;
  width: 36rpx;
  height: 44rpx;
}
.manager{
  height: 90rpx;
  display: flex;
  flex-direction: row;
}
.manager-img{
  margin-left: 36rpx;
  width: 48rpx;
  height: 48rpx;
}

.manager-name{
  margin-left: 25rpx;
}

.manager-tip{
  margin-right: 36rpx;
  font-size: 24rpx;
  color: #6B92FB;
}
.manager-action{
  display: flex;
  flex-direction: row;
}

.action{
  width: 160rpx;
  height: 52rpx;
  background-color: #6B92FB;
  border-radius: 26rpx;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
}

.manager-action .left {
  margin-left: 36rpx;
}

.manager-action .mid {
  margin-left: 84rpx;
}
.manager-action .right {
  margin-left: 84rpx;
}
.manager-line{
  margin-left: 36rpx;
  margin-right: 36rpx;
  height: 2rpx;
  background-color: #eee;
  margin-top: 36rpx;
}

.hover-button{
  background-color: #b1c0f1;
}

.family-action{
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  background-color: #eee;
}

.family-action-content{
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.family-action-item{
  width: 524rpx;
  height: 80rpx;
  display: flex;
  background-color: #6B92FB;
  justify-content: center;
  align-items: center;
  color: white;
  border-radius: 40rpx;
}