/* pages/my/familyCircleDetail/familyCircleDetail.wxss */
@import "../../../template/cell.wxss";

.detail-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.family-content{
  margin-top: 20rpx;
  width: 710rpx;
  height: auto;
  border-radius: 10rpx;

  display: flex;
  flex-direction: column;
}

.family-info{
  position: relative;
  width: 100%;
  height: 92rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}


.cell-img{
  margin-left: 26rpx;
  width: 36rpx;
  height: 44rpx;
}

.action{
  width: 160rpx;
  height: 52rpx;
  background-color: #08A5F6;
  border-radius: 26rpx;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
}

.family-manager{
  height: 90rpx;
  display: flex;
  flex-direction: row;
}
.manager-img{
  margin-left: 36rpx;
  width: 48rpx;
  height: 48rpx;
}

.manager-name{
  margin-left: 25rpx;
}

.manager-tip{
  margin-right: 36rpx;
  font-size: 24rpx;
  color: #08A5F6;
}
.manager-action{
  display: flex;
  flex-direction: row;
}

.manager-action .left {
  margin-left: 36rpx;
}

.manager-action .mid {
  margin-left: 84rpx;
}
.manager-action .right {
  margin-left: 324rpx;
}

.hover-button{
  background-color: #b1c0f1;
}
.manager-line{
  margin-left: 36rpx;
  margin-right: 36rpx;
  height: 2rpx;
  background-color: #eee;
  margin-top: 36rpx;
}
