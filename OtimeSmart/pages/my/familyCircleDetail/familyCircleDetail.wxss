/* pages/my/familyCircleDetail/familyCircleDetail.wxss */
@import "../../../template/cell.wxss";
page {
  background-color: #eee;
}
.detail-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.family-content{
  margin-top: 20rpx;
  width: 710rpx;
  height: 620rpx;
  border-radius: 10rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
}

.family-info{
  position: relative;
  width: 100%;
  height: 92rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}


.cell-img{
  margin-left: 26rpx;
  width: 36rpx;
  height: 44rpx;
}
.action{
  width: 160rpx;
  height: 52rpx;
  background-color: #6B92FB;
  border-radius: 26rpx;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
}

.manager{
  height: 90rpx;
  display: flex;
  flex-direction: row;
}
.manager-img{
  margin-left: 36rpx;
  width: 48rpx;
  height: 48rpx;
}

.manager-name{
  margin-left: 25rpx;
}

.manager-tip{
  margin-right: 36rpx;
  font-size: 24rpx;
  color: #6B92FB;
}
.manager-action{
  display: flex;
  flex-direction: row;
}