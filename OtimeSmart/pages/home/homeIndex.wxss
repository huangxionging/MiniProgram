/* pages/home/homeIndex.wxss */

page {
  width: 100%;
  background-color: #6b92fb;
}

.home-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.date-change-view {
  margin-top: 44rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.select-img {
  width: 24rpx;
  height: 24rpx;
}

.date-view {
  margin-left: 40rpx;
  margin-right: 40rpx;
  width: 200rpx;
  height: 50rpx;
  font-size: 34rpx;
  color: white;
}

.device-info {
  width: 100%;
  margin-top: 32rpx;
  color: white;
}

.device-power {
  margin-left: 20rpx;
  color: white;
  font-size: 24rpx;
}

.device-step {
  margin-top: 18rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  width: 710rpx;
  height: 400rpx;
  background-color: white;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
}

.step-info-container {
  width: 100%;
  height: 288rpx;
  display: flex;
  flex-direction: row;
}

.step-left {
  margin-left: 40rpx;
  margin-top: 80rpx;
  display: flex;
  flex-direction: column;
  flex: 1;
}

.step-number {
  display: flex;
  height: 80rpx;
  flex-direction: row;
  /* background-color: yellow; */
  align-items: center;
}

.step-value {
  height: 100%;
  font-family: DINCondensed-Bold;
  font-size: 100rpx;
  color: #6b92fb;
  display: flex;
  flex-direction: column;
  letter-spacing: -1.21px;
  text-align: center;
  justify-content: center;
  align-items: center;
}

.step-tip{
  margin-left: 20rpx;
  display: flex;
  height: 100%;
  margin-bottom: 30rpx;
  /* background-color: red; */
  align-items:flex-end;
}

.step-target{
  color: #999;
  font-size: 30rpx;
}

.step-percent{
  margin-top: 80rpx;
  margin-right: 60rpx;
  width: 154rpx;
  height: 154rpx;
  display: block;
  position: relative;
}

.device-heart {
  margin-top: 20rpx;
  width: 710rpx;
  height: 248rpx;
  background-color: white;
  border-radius: 20rpx;
}

.circle-canvas{
  width: 100%;
  height: 100%;
}
.circle-step{
  position: absolute;
  width: 26px;
  height: 26px;
  top: 31px;
  left: 31px;
}
