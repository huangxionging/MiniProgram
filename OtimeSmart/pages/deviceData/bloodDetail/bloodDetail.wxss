/* pages/deviceData/bloodDetail/bloodDetail.wxss */
.blood-container {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
}
#shrink-blood-line-chart {
  margin-top: 0rpx;
  width: 100%;
  height: 322rpx;
  background-color: #171719;
}
#diastole-blood-line-chart{
  margin-top: 20rpx;
  width: 100%;
  height: 161px;
  background-color: #171719;
}
.blood-table-view{
  width: 100%;
  margin-top: 28rpx;
  margin-bottom: 140rpx;
  display: flex;
  height: auto;
  flex-direction: column;
}
.section-view{
  width: 100%;
}
.heart-rate-check {
  position: fixed;
  bottom: 0;
  height: 140rpx;
  width: 100%;
  background-color: #171719;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.rate-icon {
  width: 68rpx;
  height: 68rpx;
}

.heart-rate-check .tip {
  color: white;
  font-size: 24rpx;
  margin-top: 5rpx;
}

.hover-heart-rate {
  background-color: #eee;
}