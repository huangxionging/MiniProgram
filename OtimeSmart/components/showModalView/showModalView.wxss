.show-modal-container{
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.mask{
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  background-color: black;
  opacity: 0.5;
}

.show-modal-content{
  position: relative;
  width: 540rpx;
  height: 260rpx;
  border-radius: 14rpx;
  background-color: #171719;
  display: flex;
  align-items: center;
  flex-direction: column;
  overflow: hidden;
}

.show-modal-title{
  justify-content: center;
  align-items: center;
  text-align: center;
  margin-top: 68rpx;
  width: 100%;
  font-size: 34rpx;
  color: white;
}

.show-modal-line{
  position: absolute;
  bottom: 88rpx;
  left: 0;
  height: 2rpx;
  width: 100%;
  background-color: #eee;
}

.show-modal-action{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  height: 88rpx;
  flex-direction: row;
}

.action1{
  flex: 1;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
}

.action-line{
  /* flex: 1; */
  width: 2rpx;
  height: 120rpx;
  background-color: #eee;
}

.action2{
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  color: #2283E2;
}

.hover-action {
  background-color: #494949;
}