/* components/deviceSyncToolView/deviceSyncToolView.wxss */
.device-tool-view{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: block;
  /* background-color: yellow; */
}

.device-mask-view{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 600rpx;
  background-color: black;
  opacity: 0.8;
}

.device-container-view{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 500rpx;
  background-color: white;
}

.device-content-view{
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.device-line{
  width: 100%;
  height: 2rpx;
  background-color: #eee;
}

.device-object{
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 28rpx;
}

.device-name{
  color: #00a0e9;
  margin-right: 20rpx;
}

.device-note{
  color: #ff0505;
  margin-right: 20rpx;
}

.device-state-view{
  position: absolute;
  width: 100%;
  bottom: 0;
  height: 400rpx;
  display: block;
  /* background-color: yellow; */
}

.device-state-image{
  position: absolute;
  left: 175rpx;
  top: 0;
  width: 400rpx;
  height: 100%;
  /* background-color: red; */
}

.device-state-tip{
  position: absolute;
  left: 175rpx;
  top: 0;
  width: 400rpx;
  height: 100%;
  align-items: center;
  justify-content: center;
  display: flex;
  color: #00a0e9;
  font-size: 28rpx;
  /* background-color: black; */
}