<!--components/deviceConnectStateToolBar/deviceConnectStateToolBar.wxml-->
<view class="device-container">
  <view class="device-left">
    <view class="device-state-tip">设备连接状态: </view>
    <view class="device-state" style="color:{{data.stateColor}};">{{data.stateText}}</view>
  </view>
  <view class="device-close">
    <view class="device-action" data-action="{{data.action}}" hover-class="hover-button" bindtap="actionClick">{{data.bindTitle}}</view>
    <image class="close-img" src="/resource/close.png" bindtap="closeToolBarClick"></image>
  </view>
</view>