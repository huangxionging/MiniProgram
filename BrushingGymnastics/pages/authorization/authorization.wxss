/* pages/authorization/authorization/authorization.wxss */

page {
  width: 100%;
  height: 100%;
}

.lauch-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.authorization {
  align-self: center;
  margin-top: 7vw;
  width: 630rpx;
  height: 688rpx;
}

.lauch-tip1 {
  font-size: 70rpx;
  margin-top: 8vh;
}

.lauch-tip2 {
  margin-top: 30rpx;
  font-size: 30rpx;
}

.lauch-button {
  margin-top: 20rpx;
  width: 400rpx;
  font-size: 25rpx;
}

.lauch-space {
  height: 40rpx;
}

.bind-view {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
}

.bind-tip-view {
  width: 100%;
  height: 338rpx;
  display: block;
  position: relative;
  /* background-color: red; */
  flex-direction: column;
}

.bind-bg-image{
  width: 100%;
  height: 294rpx;
  display: flex;
  /* background-color: #ffA0E8; */
  flex-direction: column;
}

.bind-image {
  display: flex;
  position: absolute;
  bottom: 0rpx;
  right: 30rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: white solid 10rpx;
}

.bind-tip-text{
  position: absolute;
  display: flex;
  top: 30rpx;
  left: 60rpx;
  flex-direction: column;
  color: white;
  font-size: 38rpx;
}

.tel-view {
  width: 100%;
  height: 122rpx;
  display: flex;
  flex-direction: column;
  /* background-color: yellow; */
}

.tel-tip{
  margin-left: 60rpx;
  color: #333333;
  font-size: 30rpx;
  height: 40rpx;
}

.tel-input {
  margin-left: 60rpx;
  font-size: 28rpx;
  height: 80rpx;
}

.placeholder {
  color: #999;
  font-size: 28rpx;
}

.tel-line{
  height: 2rpx;
  margin-left: 60rpx;
  margin-right: 60rpx;
  background-color: #f2f2f2;
}

.verify-view {
  margin-top: 20rpx;
  height: 122rpx;
  display: flex;
  width: 100%;
  /* background-color: brown; */
  flex-direction: column;
}

.verify-input-view {
  height: 80rpx;
  display: flex;
  margin-left: 60rpx;
  margin-right: 60rpx;
  flex-direction: row;
  background-color: white;
  align-items: center;
}

.verify-input {
  height: 100%;
  flex: 1;
}

.confirm-button {
  display: flex;
  text-align: center;
  justify-content: center;
  align-items: center;
  width: 630rpx;
  height: 80rpx;
  border-radius: 40rpx;
  color: white;
  font-size: 32rpx;
  background-color: #d6d6d6;
  margin-top: 60rpx;
}
.confirm-normal{
  background-color: #00A0E8;
}

.get-verify-code {
  height: 42rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  width: 174rpx;
  justify-content: center;
  align-items: center;
  color: #00A0E8;
  border: 2rpx solid #00A0E8;
  border-radius: 21rpx;
}

.get-verify-code-hover {
  background-color: #02557c;
  color: #a6c4d2;
}

.confirm-button-hover {
  opacity: 0.5;
}

.binding-getVerifyCode-view {
  color: #999;
  background-color: #f5f5f5;
}
