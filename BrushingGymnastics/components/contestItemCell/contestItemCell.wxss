/* components/contestItemCell/contestItemCell.wxss */
.contest-container{
  margin-top: 16rpx;
  width: 937.5rpx;
  height: 344rpx;
  display: flex;
  flex-direction: row;
}

.item-container{
  margin-left: 20rpx;
  width: 710rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: white;
  border-radius: 16rpx;
}

.item-delete{
  margin-left: 23rpx;
  width: 187.5rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  color: #333;
}

.item-state{
  margin-top: 30rpx;
  width: 100%;
  font-size: 28rpx;
  align-items: center;
  display: flex;
  flex-direction: row;
}

.state-left{
  margin-left: 30rpx;
  flex: 1;
  display: flex;
  flex-direction: row;
  color: #4E4E4E;
}

.state-right{
  display: flex;
  flex-direction: row;
  margin-right: 42rpx;
  color: #4E4E4E;
}

.item-people{
  margin-top: 40rpx;
  width: 100%;
  font-size: 28rpx;
  align-items: center;
  display: flex;
  flex-direction: row;
  /* background-color: yellow; */
}

.people-left{
  margin-left: 30rpx;
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.people-star{
  width: 30rpx;
  height: 28rpx;
  margin-left: 20rpx;
}

.people-right{
  margin-right: 40rpx;
  display: flex;
  flex-direction: row;
  color: #888888;
}

.item-device{
  margin-top: 40rpx;
  width: 100%;
  font-size: 28rpx;
  align-items: center;
  display: flex;
  flex-direction: row;
}

.device-left{
  margin-left: 30rpx;
  flex: 1;
  display: flex;
  flex-direction: row;
  color: #888;
}

.device-right{
  margin-right: 40rpx;
  display: flex;
  flex-direction: row;
}

.item-action{
  width: 100%;
  margin-top: 37rpx;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
}

.action1{
  width: 160rpx;
  margin-right: 27rpx;
  height: 60rpx;
  font-size: 28rpx;
  color: white;
  background-color: #00a0e9;
  border-radius: 30rpx;
  align-items: center;
  justify-content: center;
  display: flex;
}



.action2{
  position: relative;
  width: 160rpx;
  margin-right: 70rpx;
  height: 60rpx;
  font-size: 28rpx;
  color: #00a0e9;
  border-radius: 30rpx;
  align-items: center;
  justify-content: center;
  display: flex;
  border: 1rpx solid #00a0e9;
}
.hover-action{
  background-color: #02557c;
  color: white;
}

.red-dot {
  position: absolute;
  right: 15rpx;
  top: 0;
  width: 15rpx;
  height: 15rpx;
  background-color: red;
  border-radius: 50%;
}