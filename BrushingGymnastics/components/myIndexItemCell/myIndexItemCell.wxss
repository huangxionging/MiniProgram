.my-item{
  position: relative;
  display: flex;
  align-items: center;
  flex-direction: column;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
}
.content-container{
  display: flex;
  width: 100%;
  height: 98rpx;
  flex-direction: row;
}

.left-container{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 100%;
  flex: 1;
}

.my-item-icon{
  width: 46rpx;
  height: 46rpx;
  margin-left: 30rpx;
}

.my-item-title{
  margin-left: 26rpx;
  font-size: 28rpx;
  color: #333; 
}
.right-container {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.my-item-arrow{
  width: 44rpx;
  height: 44rpx;
  margin-right: 15rpx;
}

.cell-line{
  position: absolute;
  left: 30rpx;
  right: 0rpx;
  height: 2rpx;
  bottom: 0rpx;
  background-color: #eee;
}

.my-detail{
  font-size: 26rpx;
  color: #00a0e9;
}
