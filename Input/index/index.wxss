.create-contest-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  align-content: center;
  justify-content: center;
}

.create-name-view {
  width: 100%;
  top: 2rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  background-color: #fff;
  align-items: center;
  align-self: center;
}

.create-name-title {
  margin-left: 30rpx;
  font-size: 28rpx;
  color: #666;
  flex:1;
}

.create-input-view {
  width: 250rpx;  
  margin-right: 20rpx;  
  display: flex;
  flex-direction: column;
}

.create-input {
  width: 100%;
  font-size: 28rpx;
  color: #999;
  text-align: right;
}

.create-line {
  width: 100%;
  bottom: 30rpx;
  height: 2rpx;
  background-color: #f5f5f5;
}