/* pages/contest/addContestDevice/addContestDevice.wxss */
page{
  background-color: #eee;
}
.contest-device-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
}

.video-container{
  height: 400rpx;
  width: 100%;
}

.arrow-conatiner{
  height: 70rpx;
  width: 100%;
  align-items: center;
  justify-content: center;
  display: flex;
  flex-direction: column;
}

.arrow-image{
  width: 33rpx;
  height: 30rpx;
}

.arrow-button{
  width: 70rpx;
  height: 70rpx;
  align-items: center;
  justify-content: center;
  display: flex;
  flex-direction: column;
}

.hover-button {
  background-color: #999;
  opacity: 0.2;
}

.device-count-tip-container{
  width: 100%;
  height: 100rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 30rpx;
  color: #333;
}

.device-count-tip1{
  margin-left: 28rpx;
}

.device-count-tip2{
  color: red;
}

.device-table-view{
  margin-top: 1rpx;
}

.pull-down-image{
  align-self: center;
  margin-top: 200rpx;
  width: 248rpx;
  height: 156rpx;
}

.select-device-serial-number{
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 548rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-top: 2rpx solid #f0f0f0;
}
.number-item{
  height: 100rpx;
  width: 100%;
}

.picker-view{
  height: 300rpx;
  width: 100%;
  align-items: center;
}

.device-tip{
  width: 100%;
  color: #333;
  height: 60rpx;
  margin-top: 0rpx;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.tool-view{
  width: 100%;
  height: 88rpx;
  display: flex;
  flex-direction: row;
  border-top: 2rpx solid #f0f0f0;
  border-bottom: 2rpx solid #f0f0f0;
  align-items: center;
}

.number-item{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #333;
  font-size: 30rpx;
  line-height: 200rpx;
}
.tool-left{
  margin-left: 30rpx;
  font-size: 30rpx;
  color: #333;
  flex: 1;
}

.tool-right{
  margin-right: 30rpx;
  font-size: 30rpx;
  color: #00a0e9;
}

.hover-text{
  color: #f0f0f0;
}

.number-indicator{
  height: 100rpx;
}