/* pages/my/deviceManage/deviceManage.wxss */

page {
  background-color: #eee;
}

.device-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
}

.content-container {
  width: 100%;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.no-device-image {
  width: 250rpx;
  height: 250rpx;
  margin-top: 242rpx;
}

.no-device-tip {
  margin-top: 35rpx;
  color: #999;
  font-size: 28rpx;
}

.add-device-button {
  margin-top: 130rpx;
  width: 400rpx;
  height: 80rpx;
  border-radius: 8rpx;
  background-color: #00a0e9;
  color: white;
  align-items: center;
  justify-content: center;
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
}

.hover-button {
  background-color: #02557c;
  color: #a6c4d2;
}

.device-count-tip-container {
  width: 100%;
  height: 100rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 30rpx;
  color: #333;
}

.device-count-tip1 {
  margin-left: 28rpx;
}

.device-count-tip2 {
  color: red;
}

.device-table-view {
  margin-top: 1rpx;
  margin-bottom: 100rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.add-bottom-device {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #00a0e9;
  color: white;
  align-items: center;
  justify-content: center;
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
}

.hover-bottom-button {
  background-color: #02557c;
  color: #a6c4d2;
}

.mask-view{
  position: absolute;
  left: 0;
  top: 0;
  background-color: black;
  opacity: 0.8;
  height: 100%;
  width: 100%;
}

.mask-content-container{
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
}

.mask-content-view{
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.mask-container{
  position: absolute;
  display: block;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
}

.intro-tip{
  position: absolute;
  top: 40rpx;
  left: 0;
  width: 100%;
  height: 319rpx;
}

.intro-iknow{
  position: relative;
  margin-top: 603rpx;
  width: 231rpx;
  height: 103rpx;
}
