/* pages/contest/signUp/signUp.wxss */
.sign-container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.sign-image{
  width: 100%;
  height: 320rpx;
}

.sign-view{
  display: flex;
  flex-direction: column;
  width: 100%;
  align-items: center;
}

.sign-up-tip-image{
  margin-top: 30rpx;
  width: 493rpx;
  height: 74rpx;
}

.sign-up-content{
  display: flex;
  width: 100%;
  flex-direction: column;
}

.sign-item{
  display: flex;
  flex-direction: row;
  height: 76rpx;
  margin-top: 40rpx;
  align-items: center;
}

.sign-left{
  display: flex;
  flex-direction: row;
  flex: 1;
  font-size: 28rpx;
  color: #333;
  height: 60rpx;
  width: 143rpx;
  align-items: center;
}



.sign-key-tip{
  color: #C50008;
  font-size: 32rpx;
  margin-left: 68rpx;
  margin-right: 5rpx;
}
.sign-date-tip{
  height: 100%;
  width: 119rpx;
  display: flex;
  line-height:1;
  flex-direction: column;
}

.sign-right{
  margin-right: 68rpx;
  width: 440rpx;
  height: 100%;
  border: 1rpx solid #C4C4C4;
  align-items: center;
  justify-content: center;
}

.sign-input{
  display: flex;
  margin-left: 20rpx;
  margin-right: 20rpx;
  height: 100%;
  font-size: 28rpx;
  color: #333;
  align-items: center;
  /* background-color: red; */
}

.sign-date{
  display: flex;
  flex-direction: row;
  margin-right: 68rpx;
  width: 440rpx;
  height: 76rpx;
  border: 1rpx solid #C4C4C4;
  align-items: center;
}
.sign-date-down{
  margin-right: 33rpx;
  width: 20rpx;
  height: 12rpx;
}

.sign-up-button{
  margin-top: 45rpx;
  display: flex;
  width: 660rpx;
  height: 90rpx;
  background-color: #00a0e9;
  color: white;
  font-size: 38rpx;
  font-weight: bold;
  align-items: center;
  justify-content: center;
  border-radius: 6rpx;
}

.sign-up-hover{
  background-color: #02557c;
  color: #a6c4d2;
}

.signed-contact-tip{
  margin-top: 16rpx;
  color: #00a0e9;
  font-size: 24rpx;
}