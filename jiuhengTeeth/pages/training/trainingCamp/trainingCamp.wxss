/* pages/training/trainingCamp/trainingCamp.wxss */
page {
  background-color: #F3F4F7;
}
.traing-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  
}

.traing-content{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  overflow: hidden;
}
.traing-image{
  margin-top: 45rpx;
  width: 649rpx;
}

.sign-item{
  display: flex;
  flex-direction: row;
  height: 76rpx;
  margin-top: 40rpx;
  align-items: center;
}

.sign-left{
  display: flex;
  flex-direction: row;
  flex: 1;
  font-size: 28rpx;
  color: #333;
  height: 60rpx;
  width: 143rpx;
  align-items: center;
}



.sign-key-tip{
  color: #C50008;
  font-size: 32rpx;
  margin-left: 68rpx;
  margin-right: 5rpx;
}
.sign-date-tip{
  height: 100%;
  width: 119rpx;
  display: flex;
  line-height:1;
  flex-direction: column;
}

.sign-right{
  margin-right: 68rpx;
  width: 440rpx;
  height: 100%;
  border: 2rpx solid #C4C4C4;
  align-items: center;
  justify-content: center;
}

.sign-input{
  display: flex;
  margin-left: 20rpx;
  margin-right: 20rpx;
  height: 100%;
  font-size: 28rpx;
  color: #333;
  align-items: center;
  /* background-color: red; */
}

.sign-date{
  display: flex;
  flex-direction: row;
  margin-right: 68rpx;
  width: 440rpx;
  height: 76rpx;
  border: 1rpx solid #C4C4C4;
  align-items: center;
}
.sign-date-down{
  margin-right: 33rpx;
  width: 20rpx;
  height: 12rpx;
}

.sign-up-button{
  margin-top: 45rpx;
  margin-bottom: 20rxp;
  display: flex;
  width: 660rpx;
  height: 90rpx;
  background-color: #00a0e9;
  color: white;
  font-size: 38rpx;
  font-weight: bold;
  align-items: center;
  justify-content: center;
  border-radius: 6rpx;
}

.sign-up-hover{
  background-color: #02557c;
  color: #a6c4d2;
}

.signed-contact-tip{
  margin-top: 16rpx;
  color: #00a0e9;
  font-size: 24rpx;
  text-align: center;
}

.study-content{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.look-video{
  margin-top: 22rpx;
  width: 690rpx;
  height: 367rpx;
  border-radius:16rpx;
}

.cover-view{
  width: 100%;
  height: 100%;
  background-color: #3A3C48;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 16rpx;

}

.cover-title{
  margin-top: 130rpx;
  font-size: 64rpx;
  font-weight: bold;
  color: #F2F2F2;
}

.cover-time{
  margin-top: 45rpx;
  font-size: 95rpx;
  font-weight: bold;
  color: #00a0e9;
}

.video-key-point{
  border-radius: 16rpx;
  margin-top: 36rpx;
  width: 690rpx;
  display: flex;
  flex-direction: column;
  background-color: white;
}

.video-key-content{
  width: 100%;
  height: 88rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.video-key-title{
  font-size: 30rpx;
  color: #333;
  margin-left: 30rpx;
  flex: 1;
}

.video-key-time{
  font-size: 24rpx;
  color: #999;
  margin-right: 30rpx;
}

.video-key-line{
  margin-left: 30rpx;
  margin-right: 30rpx;
  height: 2rpx;
  background-color: #E9E9EB;
}

.key-point-content{
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 30rpx;
  font-size: 24rpx;
  color: #999;
}

.teach-content-bg{
  width: 690rpx;
  height: 484rpx;
  margin-top: 30rpx;
}