/* pages/home/editDoctorInfo/editDoctorInfo.wxss */

.edit-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.personal {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.text-tip {
  font-size: 30rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
}

.personal-show-tip {
  font-size: 25rpx;
  color: #999;
}

.textField-container {
  background-color: #eee;
  margin-top: 2rpx;
  padding: 20rpx;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.textarea-view {
  background-color: #eee;
  padding: 20rpx;
  height: 200rpx;
  font-size: 30rpx;
}

.textarea {
  width: 100%;
  height: 100%;
}

.placeholder {
  color: #a1a1a1;
}

.confirm_button {
  /* opacity: 0.5; */
  position: relative;
  text-align: center;
  display: block;
  justify-content: center;
  align-items: center;
  width: 390rpx;
  height: 90rpx;
  color: white;
}

.confirm_text {
  position: absolute;
  display: flex;
  width: 100%;
  height: 100%;
  text-align: center;
  font-size: 30rpx;
  /* left: 0; */
  /* background-color: red; */
  z-index: 99999999;
  justify-content: center;
  align-items: center;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  /* display: block; */
}
.confirm_image {
  width: 390rpx;
  height: 90rpx;
}

.confirm_button-hover {
  opacity: 0.5;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 390rpx;
  height: 90rpx;
  color: white;
}

.confirm_button-view {
  position: relative;
  width: 100%;
  height: 230rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.text-must{
  color: #ea3621;
}
