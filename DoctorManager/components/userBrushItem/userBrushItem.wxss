/* components/userBrushItem/userBrushItem.wxss */
.user-brush-container{
  width: 100%;
  height: 100%;
}

.brush-content{
  position: relative;
  margin-left: 20rpx;
  margin-right: 20rpx;
  height: 100%;
  display: flex;
  flex-direction: row;
}
.avatar{
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
}
.brush-info{
  position: absolute;
  display: flex;
  height: 100%;
  flex-direction: column;
  left: 100rpx;
  right: 0rpx;
}
.user-name{
  font-size: 30rpx;
}
.user-brush-text{
  font-size: 30rpx;
  color: #999;
}
.brush-report{
  width: 100%;
}